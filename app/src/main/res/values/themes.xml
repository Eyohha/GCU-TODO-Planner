<!-- res/values/themes.xml -->
<resources>
    <!-- Base application theme -->
    <style name="Theme.TODOPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/accent_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_blue</item>
    </style>

    <!-- Custom button styles -->
    <style name="Button.Delete" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/delete_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Action" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/action_yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>